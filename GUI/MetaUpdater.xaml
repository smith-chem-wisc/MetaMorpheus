<Window x:Class="MetaMorpheusGUI.MetaUpdater"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MetaMorpheusGUI"
        mc:Ignorable="d"
        Title="MetaUpdater" Height="470" Width="430" ResizeMode="NoResize" Topmost="True" WindowStartupLocation="CenterScreen">
    <StackPanel>
        <TextBlock Name="lbl" TextWrapping="Wrap" FontSize="15" VerticalAlignment="Top" Margin="5" />
        <WebBrowser Height="327" Name="releases"/>
        <Button Name="btn_DownloadAndRun" Content="Download and run installer" FontSize="13" Margin="5" Click="InstallerClicked" />
        <!--<Button Content="Download and open portable version .zip " FontSize="13" Margin="5" Click="PortableClicked" />-->
        <Button Name="btn_NotInterested" Content="Not interested" FontSize="13" Margin="5" Click="NoClicked" />
        <Button Name="btn_DownloadNewDotnet" Content="Download new dotnet version" FontSize="13" Margin="5" Click="DownloadNewDotnetVersion"/>
    </StackPanel>
</Window>