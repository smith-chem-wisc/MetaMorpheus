<Window x:Class="MetaMorpheusGUI.ModeSwitchConfirmationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Mode Switch Confirmation" 
        Height="320" Width="540"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="{StaticResource BackgroundColor}">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Warning Icon and Title -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,20">
            <TextBlock Text="⚠" 
                       FontSize="32" 
                       Margin="0,0,10,0" 
                       VerticalAlignment="Center"
                       Foreground="Orange"/>
            <TextBlock Text="Possible Mode Contamination" 
                       FontSize="18" 
                       FontWeight="Bold" 
                       VerticalAlignment="Center"
                       Foreground="{StaticResource TextColor1}"/>
        </StackPanel>

        <!-- Message -->
        <TextBlock Grid.Row="1" 
                   TextWrapping="Wrap" 
                   Foreground="{StaticResource TextColor1}"
                   FontSize="13"
                   Margin="0,0,0,20">
            <Run Text="Attempting to switch between protein and RNA mode while files are already loaded."/>
            <LineBreak/>
            <LineBreak/>
            <Run Text="MetaMorpheus can only perform one mode at a time. Using a protein search task with an RNA database and vice versa will lead to poor results and/or a crash."/>
            <LineBreak/>
            <LineBreak/>
            <Run Text="Would you like to proceed with switching modes?"/>
        </TextBlock>

        <!-- Check Box -->
        <CheckBox x:Name="RememberCheckBox" 
                  Grid.Row="2" 
                  Content="Remember My Decision?" 
                  FontSize="13"
                  Margin="0 0 0 6"
                  />

        <!-- Buttons -->
        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="10"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Button x:Name="YesKeepFilesButton" 
                    Grid.Column="0"
                    Content="Yes, Keep Files" 
                    Click="YesKeepFiles_Click"
                    Background="{StaticResource SecondaryButtonColor}"
                    Foreground="White"
                    FontSize="12"
                    Height="30"
                    BorderThickness="0"/>

            <Button x:Name="YesRemoveFilesButton" 
                    Grid.Column="2"
                    Content="Yes, Remove All Files" 
                    Click="YesRemoveFiles_Click"
                    Background="{StaticResource AccentColor}"
                    Foreground="White"
                    FontSize="12"
                    Height="30"
                    BorderThickness="0"/>

            <Button x:Name="NoButton" 
                    Grid.Column="4"
                    Content="No, Cancel" 
                    Click="No_Click"
                    Background="{StaticResource DataGridHeaderColor}"
                    Foreground="{StaticResource TextColor1}"
                    FontSize="12"
                    Height="30"
                    BorderThickness="0"/>
        </Grid>
    </Grid>
</Window>
