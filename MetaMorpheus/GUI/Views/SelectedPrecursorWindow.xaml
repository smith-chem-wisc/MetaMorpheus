<Window x:Class="MetaMorpheusGUI.Views.SelectedPrecursorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MetaMorpheusGUI.Views"
        mc:Ignorable="d"
        Title="SelectedPrecursorWindow" Height="450" Width="600">
    <Window.Resources>
        <ResourceDictionary>
            <!--Styling for the grid that defines each page-->
            <Style x:Key="DataGridCellStyle" TargetType="DataGridCell">
                <Setter Property="Background" Value="{StaticResource DataGridHeaderColor}"/>
                <Setter Property="TextBox.IsReadOnly" Value="True"/>
            </Style>
        </ResourceDictionary>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="22"/>
        </Grid.RowDefinitions>

        <!--Data grid-->
        <DataGrid x:Name="PrecursorDataGrid" ItemsSource="{Binding PrecursorsFromDataGrid}" Grid.Row="0" VerticalAlignment="Stretch" CanUserDeleteRows="True" 
                  CanUserAddRows="True" CanUserReorderColumns="False" AutoGenerateColumns="True" SelectionUnit="Cell">
            <DataGrid.Columns>
                <DataGridTextColumn Header="m/z" Binding="{Binding FileNameWithExtension, Mode=OneWay}" Width="200" CellStyle="{StaticResource DataGridCellStyle}" />
                <DataGridTextColumn Header="Charge" Binding="{Binding Condition, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="100" />
                <DataGridTextColumn Header="RT Start (min)" Binding="{Binding Biorep, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="100" />
                <DataGridTextColumn Header="RT End (min)" Binding="{Binding Fraction, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Width="100" />
            </DataGrid.Columns>
            <DataGrid.CommandBindings>
                <CommandBinding Command="{x:Static ApplicationCommands.Paste}" Executed="Paste"/>
            </DataGrid.CommandBindings>
        </DataGrid>

        <!--Save/cancel buttons-->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Grid.Row="2" VerticalAlignment="Bottom">
            <Button x:Name="SavePrecursors" Content="Save Precursor List" Click="SavePrecursors_Click"/>
            <Button x:Name="CancelPrecursors" Content="Cancel" Click="CancelPrecursors_Click"/>
        </StackPanel>
    </Grid>
</Window>
