<Window x:Class="MetaMorpheusGUI.AnnotatePlexWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Annotate Plex" Height="560" Width="720"
        WindowStartupLocation="CenterOwner">
    <DockPanel Margin="8">
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0,0,0,8">
            <StackPanel Width="220">
                <TextBlock Text="Select Plex:" FontWeight="Bold"/>
                <ComboBox x:Name="PlexComboBox" SelectionChanged="PlexComboBox_SelectionChanged" />
            </StackPanel>
            <StackPanel Width="240" Margin="16,0,0,0">
                <TextBlock Text="Select Isobaric Tag Type:" FontWeight="Bold"/>
                <ComboBox x:Name="TagTypeComboBox" SelectionChanged="TagTypeComboBox_SelectionChanged"/>
            </StackPanel>
            <StackPanel Orientation="Vertical" Margin="16,0,0,0">
                <StackPanel Orientation="Horizontal" Margin="0,0,0,4">
                    <Button Content="Auto Fill BioRep" Click="AutoFillReplicates_Click" Margin="0,0,8,0" Width="120"/>
                    <Button Content="Validate" Click="ValidateButton_Click" Margin="0,0,8,0" Width="80"/>
                    <Button Content="Save" Click="SaveButton_Click" Margin="0,0,8,0" Width="70"/>
                    <Button Content="Cancel" Click="CancelButton_Click" Width="70"/>
                </StackPanel>
            </StackPanel>
        </StackPanel>

        <DataGrid x:Name="AnnotationGrid"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  IsReadOnly="False"
                  SelectionMode="Extended"
                  SelectionUnit="FullRow"
                  Margin="0,0,0,8">
            <DataGrid.InputBindings>
                <KeyBinding Command="Paste" Modifiers="Control" Key="V"/>
            </DataGrid.InputBindings>
            <DataGrid.CommandBindings>
                <CommandBinding Command="Paste" Executed="Paste_Executed" CanExecute="Paste_CanExecute"/>
            </DataGrid.CommandBindings>
            <DataGrid.Columns>
                <DataGridTextColumn Header="Tag" Binding="{Binding Tag}" IsReadOnly="True" Width="80"/>
                <DataGridTextColumn Header="Sample Name" Binding="{Binding SampleName}" Width="180"/>
                <DataGridTextColumn Header="Condition" Binding="{Binding Condition}" Width="150"/>
                <DataGridTextColumn Header="Biological Replicate" Binding="{Binding BiologicalReplicate}" Width="150"/>
            </DataGrid.Columns>
        </DataGrid>

        <TextBlock DockPanel.Dock="Bottom" Foreground="Gray" TextWrapping="Wrap">
            Paste Sample Names starting in the Sample Name column (optionally with a second column for Conditions).
            Paste Conditions starting in the Condition column to update only conditions.
            Technical replicate is now defined per file in the TMT Experimental Design window.
        </TextBlock>
    </DockPanel>
</Window>